{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@product/(.*)$": "<rootDir>/src/product/$1",
    "^@supermarket/(.*)$": "<rootDir>/src/supermarket/$1",
    "^@core/(.*)$": "<rootDir>/src/core/$1"
  },
  "coverageDirectory": "./coverage"
}
